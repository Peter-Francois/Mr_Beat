<TrackSoundButton>:
    bold: True
    font_size: dp(16)

<TrackStepButton>:
    background_down : "images/step_down.png"

<TrackWidget>:


<TrackClearButton>:
    text : "CLEAR"
    bold : True
    font_size : dp(9)
    size_hint_y : None
    text_size : self.size
    halign : "center"
    valign : "center"
    height : dp(20)
    background_normal : "images/action_button_normal.png"
    background_down : "images/action_button_down.png"


<TrackMuteButton>:
    bold : True
    halign : "center"
    valign : "center"
    height : dp(20)
    font_size : dp(9)
    size_hint_y : None
    text_size : self.size
    text : "MUTE"
    background_down : "images/action_button_down.png"
    background_normal : "images/action_button_normal.png"

<TrackSoloButton@TrackMuteSoloButton>:
    text : "SOLO"
    background_down : "images/action_button_down.png"
    background_normal : "images/action_button_normal.png"
    bold : True
    halign : "center"
    valign : "center"
    height : dp(20)
    font_size : dp(9)
    size_hint_y : None
    text_size : self.size
