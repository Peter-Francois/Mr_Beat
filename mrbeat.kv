#:import track track
#:import play_indicator play_indicator

MainWidget:
<VerticalSpacingWidget>:
    # On donne une très petite taille afin de ne pas voir les widgets lorsque la fenétre n'est pas retaillée, ensuite
    # ils changeront de taille pour combler l'espace manquant car les tracks widgets on une taille max
    size_hint_y: 0.01


<ControlButton@Button>:

<MainWidget>:
    tracks_layout: tracks_layout
    play_indicator_widget: play_indicator_widget
    button_add_bpm: button_add_bpm
    button_less_bpm: button_less_bpm
    orientation: 'vertical'


    # top layout
    BoxLayout:
        orientation: 'vertical'
        RelativeLayout:
            size_hint_y: None
            height: dp(60)
            Image:
                source: "images/top_background.png"
                allow_stretch: True
                keep_ratio: False
            Image:
                source: "images/logo.png"
                size_hint_x: None
                width: dp(230)
                allow_stretch: True

            BoxLayout:
                size_hint_x: None
                width: dp(165)
                pos_hint: {"center_x": 0.5}
                ControlButton:
                    background_normal: "images/play_button_normal.png"
                    background_down: "images/play_button_down.png"
                    on_press: root.audio_mixer.audio_play()
                ControlButton:
                    background_normal: "images/stop_button_normal.png"
                    background_down: "images/stop_button_down.png"
                    on_press: root.audio_mixer.audio_stop()
            BoxLayout:
                size_hint_x: None
                width: dp(180)
                pos_hint: {"right": 1}
                ControlButton:
                    id : button_less_bpm
                    background_normal: "images/minus_button_normal.png"
                    background_down: "images/minus_button_down.png"
                    background_disabled_normal: "images/minus_button_down.png"
                    background_disabled_down: "images/minus_button_down.png"
                    on_press: root.bpm -= 5
                    size_hint: None, None
                    size: (dp(32), self.parent.height + dp(8))
                    pos_hint: {"center_y": .5}

                RelativeLayout:
                    Image:
                        source: "images/bpm_lcd_background.png"
                        allow_stretch: True
                        keep_ratio: False
                    Label:
                        pos: -dp(4), dp(2)
                        text: "888"
                        font_name: "fonts/Lcd.ttf"
                        font_size: dp(36)
                        opacity: .1
                    Label:
                        pos: -dp(4), dp(2)
                        text: '{:0>3}'.format(str(root.bpm))
                        font_name: "fonts/Lcd.ttf"
                        font_size: dp(36)
                ControlButton:
                    id: button_add_bpm
                    on_press: root.bpm += 5
                    background_normal: "images/plus_button_normal.png"
                    background_down: "images/plus_button_down.png"
                    background_disabled_normal: "images/plus_button_down.png"
                    background_disabled_down: "images/plus_button_down.png"
                    size_hint: None, None
                    size: (dp(32), self.parent.height + dp(8))
                    pos_hint: {"center_y": .5}
                Widget:
                    size_hint_x: None
                    width: dp(20)

        # main layout
        RelativeLayout:
            Image:
                source: "images/background.jpg"
                allow_stretch: True
                keep_ratio: False
            BoxLayout:
                # pour mettre une marge
                x: dp(16)
                y: dp(16)
                size_hint: None, None
                size: (self.parent.width - dp(32), self.parent.height - dp(32))
                orientation: "vertical"
                PlayIndicatorWidget:
                    id: play_indicator_widget
                    size_hint_y: None
                    height: dp(8)
                    left_align: root.TRACK_STEPS_LEFT_ALIGN
                ScrollView:
                    do_scroll_x: False
                    do_scroll_y: True
                    BoxLayout:
                        # pour la scrollview on a besoin de définir une hauteur de fenêtre
                        size_hint_min_y: root.tracks_widget_size_hint_max_y * root.nb_tracks
                        id: tracks_layout
                        orientation: 'vertical'
